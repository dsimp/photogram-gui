<h1><%= @user.username%></h1>

<form action="/modify_user/<%= @user.username%>">
  <dt>Id</dt>
    <dd><%= @user.id%></dd>
  <dt>Edit user</dt>
  <dd>
    <label for="browser_username2">Username</label>
    <input id="browser_username2" name="entered_name2" type="text" value="<%= @user.username%>">
  </dd>

<button>Update user</button>

<h2>Own photos (<%= @user.own_photos.count%>)</h2>
<table border= "1">
<tbody><tr>
  <th>Image</th>
  <th>Owner</th>
  <th>Caption</th>
  <th>Posted</th>
  <th></th>
</tr>
<% @user.own_photos.each do |a_photo|%>
<tr>
  <td><img src= "<%= a_photo.image%>"></td>
  <td><%= @user.username%></td>
  <td><%= a_photo.caption%></td>
  <td><%= a_photo.created_at%></td>
  <td><a href="/photos/<%= a_photo.id%>">Show details</a></td>  
</tr>
<% end %>
</tbody></table>

</form>
